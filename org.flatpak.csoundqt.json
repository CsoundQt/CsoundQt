{
    "app-id": "org.flatpak.CsoundQt",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "CsoundQt-d-cs6",
    "finish-args": [
    	"--socket=wayland",
    	"--socket=x11",
    	"--share=ipc",
    	"--share=network",
    	"--device=dri"
    ],
    "modules": [
        {
            "name": "csoundqt",
            "buildsystem": "qmake",
            "build-commands": [
                "qmake CONFIG+=rtmidi qcs.pro",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/CsoundQt/CsoundQt",
                    "tag": "v1.1.0-rc2"
                }
            ]
        }
    ]
}
